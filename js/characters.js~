class Player{
    constructor(x,y,dx,dy,name='P'){
	this.x = x;
	this.y = y;
	this.dx = dx;
	this.dy = dy;
	this.name = name;
	this.health = 10;
    }

    draw(){
	ctx.fillText(this.name,this.x,this.y);
    }
}

class Enemy{
    constructor(x,y,dx,dy,name='E'){
	this.x = x;
	this.y = y;
	this.dx = dx;
	this.dy = dy;
	this.name = name;
    }
    draw(){
	ctx.fillText(this.name,this.x,this.y);
    }
}
